    <div class="mb-3">
      <label for="overVoting" class="form-label">Over Voting</label>
      <input type="checkbox" name="malpractices.overVoting" value="overVoting" class="check" id="overVoting" />
    </div>

    <div class="mb-3">
      <label for="destruction" class="form-label">Destruction of election materials</label>
      <input type="checkbox" name="malpractices.destruction" value="destruction" class="check" id="destruction" />
    </div>

    <div class="mb-3">
      <label for="intimidation" class="form-label">Voter intimidation</label>
      <input type="checkbox" name="malpractices.intimidation" value="intimidation" class="check" id="intimidation" />
    </div>

    <div class="mb-3">
      <label for="disenfranchisement" class="form-label">Voter disenfranchisement</label>
      <input type="checkbox" name="malpractices.disenfranchisement" value="disenfranchisement" class="check" id="disenfranchisement" />
