<section class="mb-5">
  <a href="/pollingAgent/option" class="btn" style="margin-top: 5px">Back</a>

  <h4 class="hero-text">Report Election Malpractice</h4>

  <form method="POST" class="addPU report" autocomplete="off">
    <div class="input">
      <label for="exampleInputEmail1" class="text-bold text-uppercase">Polling Unit ID:</label>
      <input
        type="string"
        name="id"
        required
        class="form-control"
        id="exampleInputEmail1"
        placeholder="Enter Polling Unit Id"
      />
    </div>

    <h3 class="text-uppercase text-white mb-4">
      Type of Electoral Malpractice
    </h3>

    <div class="mb-3">
      <label for="delayedVotes" class="form-label">Delayed Voting (INEC late arrival)</label>
      <input type="checkbox" name="malpractices.DelayedVote" value="DelayedVote" class="check" id="delayedVotes" />
    </div>
    <div class="mb-3">
      <label for="underageVoting" class="form-label">Underage Voting</label>
      <input type="checkbox" name="malpractices.underageVoting" value="underageVoting" class="check" id="underageVoting" />
